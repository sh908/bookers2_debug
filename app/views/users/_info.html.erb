<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= user.followers.count %></th>
  </tr>
  <tr>
   <th>followers</th>
   <th><%= user.followings.count %></th>
  </tr>
  <tr>
      <% if current_user.following?(user) %>
        <th><%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: 'btn btn-primary' %></th>
      <% else %>
        <th><%= link_to 'フォローする', user_relationships_path(user.id), method: :post, class: 'btn btn-success' %></th>
      <% end %>
  </tr>
</table>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>