<% book_comments.each do |book_comment| %>
  <% unless book_comment.id.nil? %>
    <p><%= link_to "#{book_comment.user.name}さん", user_path(book_comment.user.id) %></p>
    <p>コメント：<%= book_comment.comment %></p>
    <% if book_comment.user == current_user %>
      <p><%= link_to 'コメントを削除する', book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true %></p>
    <% end %>
  <% end %>
<% end %>
