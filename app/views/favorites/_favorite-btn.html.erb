<% if book.favorited_by?(current_user) %>
  <%= link_to book.favorites.count, book_favorites_path(book), remote: true,  method: :delete, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to book.favorites.count, book_favorites_path(book), remote: true,  method: :post, class: "fas fa-heart heart_blue" %>
<% end %>